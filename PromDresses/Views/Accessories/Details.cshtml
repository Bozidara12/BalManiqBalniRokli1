@model PromDresses.Data.Accessorie

@{
    ViewData["Title"] = "Детайли";
}
<br />
<br />
<br />
<br />
<div class="SecoundPageName">
    <p>ДЕТАЙЛИ ЗА @Model.NameAccessorie.ToUpper()</p>
</div>
<div id="cards" class="card d-flex flex-row align-items-center p-3">
    <div class="col-md-6 text-center">
        <img src="@Html.DisplayFor(model=>model.URLimages)" width="370" class="img-fluid" />
    </div>
    <div class="col-md-6">
        <div class="card-body text-left">
            <p class="card-text"><h5>Каталожен номер</h5> @Html.DisplayFor(model => model.CNumber)</p>
            <p class="card-text"><h5> Име </h5>@Html.DisplayFor(model => model.NameAccessorie)</p>
            <p class="card-text"><h5>Колекция</h5>@Html.DisplayFor(model => model.Collections.Name)</p>
            <p class="card-text"><h5> Описание </h5>@Html.DisplayFor(model => model.Description)</p>
            <p class="card-text"><h5>Цена</h5>@Html.DisplayFor(model => model.Price)</p>
        </div>
    </div>
</div>
@if (User.IsInRole("Admin"))
{
<div>
    <h4>Accessorie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NameAccessorie)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameAccessorie)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Collections)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Collections.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.URLimages)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.URLimages)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateRegister)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateRegister)
        </dd>
    </dl>
</div>
}
<div>
    @if (User.IsInRole("Admin"))
    {
      <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn text-white mt-4" style="background-color:#f1cec6;">Промяна</a> 
    }
    <a asp-action="Index" class="btn text-white mt-4" style="background-color:#f1cec6;">Назад</a>
</div>
